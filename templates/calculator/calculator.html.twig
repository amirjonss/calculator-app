{% extends 'base.html.twig' %}

{% block body %}

    <div class="row justify-content-center mt-5">
        <div class="col-12 text-center">
            <h2 class="">Calculator</h2>
        </div>
        <div class="col-6">
            {{ form(calculator_form) }}
        </div>
        {% if calculator.getFirstNum() %}
            <div class="col-12 text-center">
                <h2>{{ calculator.getFirstNum() }} {{calculator.getOperation() }} {{ calculator.getSecondNum() }} equals {{ equals_to }}</h2>
            </div>
        {% endif %}
    </div>

{% endblock %}